{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": false,
    "jsx": "react",
    "target": "es6",
    "experimentalDecorators": true,
    "outDir": "build/"
  },
  "compileOnSave": false,
  "filesGlob": [
    "**/*.tsx",
    "**/*.ts",
    "!node_modules/**",
    "!typings/**"
  ],
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "!node_modules/**",
    "!typings/**"
  ],
  "files": [

  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
